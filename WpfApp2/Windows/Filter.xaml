<Window x:Class="WpfApp2.Windows.Filter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Windows"
        mc:Ignorable="d"
        Title="Filter" Height="300" Width="500">
    <Grid>
        <StackPanel Margin="15">
            <Label Style="{StaticResource lbl}" Content="Группа"/>
            <ComboBox Background="Pink" x:Name="groupComboBox" Height="60" SelectedValue="{Binding groupid}" SelectedValuePath="id" DisplayMemberPath="name" />
            <Button Background="Gray" Style="{StaticResource btn}" Name="Button" Content="Отфильтровать" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
