<UserControl x:Class="WpfApp1.Kontaks.WPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Kontaks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Margin="15">
    <Grid Background="Aqua">
        <StackPanel>
            <Label x:Name="idLabel" FontSize="20"/>
            <Label x:Name="nameLabel" FontSize="20"/>
            <Label x:Name="phoneLabel" FontSize="20"/>
            <Label x:Name="favoriteLabel" FontSize="20"/>
            <Label x:Name="groupidLabel" FontSize="20"/>
        </StackPanel>
    </Grid>
</UserControl>
